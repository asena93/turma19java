package lista4Objetos;

import java.util.Scanner;

import lista4Classes.Cliente;

public class ClasseCliente {

	public static void main(String[] args) {
		
		Scanner leia = new Scanner(System.in);
		
		int idade = 0;
		Cliente cliente1 = new Cliente();
		
		System.out.println("Nome do Cliente: ");
		cliente1.nome = leia.next();
		System.out.println("CPF do cliente: ");
		cliente1.cpf = leia.next();
		System.out.println("Ano de Nascimento: ");
		cliente1.anoNascimento = leia.nextInt();
		System.out.println("Forma de Pagamento: 1- Cartão de Crédito 2- Cartão de Débito 3- Dinheiro: ");
		cliente1.formaDePagamento = leia.next().charAt(0);
		
		idade = cliente1.calcularIdade(idade);
		
		System.out.printf("Dados do Cliente:\n%s \n%s \n%d \n%c", cliente1.nome, cliente1.cpf, idade, cliente1.pagamento());
		
		
		
		

	}

}
