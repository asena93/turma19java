package Exemplo;

import java.util.Scanner;

public class Auxilio {

	public static void main(String[] args) {
		
		Scanner leia = new Scanner(System.in);
		
		String nome;
		int valor, auxilioAnterior, bolsaFamilia;
		
		System.out.println("Digite seu nome: ");
		nome = leia.next();
		System.out.println("Se você é chefa de família, digite 1 se não, 2: ");
		valor = leia.nextInt();
		System.out.println("Se você recebeu o auxílio anteriormente digite 1, se não, 2: ");
		auxilioAnterior = leia.nextInt();
		System.out.println("Digite 1 se você recebeu bolsa familia e 2 se não recebeu: ");
		bolsaFamilia = leia.nextInt();
		
		/*se(valor == "1") {
			escreva("Auxilio de 1200 liberado")
		}
		senao se (valor == "2") {
			escreva("Auxilio de 600 liberado")
		}
		senao
		{
			escreva("Não digitou nem 1 e nem 2, sem auxilio")
		}*/
		
		if (valor == 1 && auxilioAnterior == 1) {
			System.out.println("Você receberá R$ de auxílio.");
		} else if (valor == 1 && auxilioAnterior == 2) {
			System.out.println("Você receberá R$ de auxílio.");
		} else if (valor == 2 && auxilioAnterior == 2) {
			System.out.println("Você receberá R$ de auxílio.");
		} else {
			System.out.println("Você não digitou as opções corretas.");
		}

	}

}
